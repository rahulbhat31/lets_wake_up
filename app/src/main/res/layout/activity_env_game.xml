<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvGame"
    android:background="@drawable/surrounding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="542dp"
        android:layout_height="217dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/saw"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="120dp"
            android:rotation="270"
            app:srcCompat="@drawable/saw" />

        <ImageView
            android:id="@+id/thrownwaste"
            android:layout_width="129dp"
            android:layout_height="76dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp"

            app:srcCompat="@drawable/thrownwaste" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="71dp"
            android:layout_marginLeft="600dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dustbin" />


    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="70dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/waterPollGSID"
                android:layout_width="81dp"
                android:layout_height="70dp"
                android:layout_marginBottom="40dp"
                android:text="0/2"
                android:textColor="@color/colorWhite"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutGWGameTxt"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:text="Find all items that are harming environment and earn points"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </LinearLayout>


</LinearLayout>