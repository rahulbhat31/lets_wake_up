<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GWGameSimulation1">

    <ImageView

        android:id="@+id/waterImgID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/waterbgimg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/duckImgID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/duckimg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fish1imgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/fishimg1" />

            <ImageView
                android:layout_marginLeft="400dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp"
                android:id="@+id/plasticBagImgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/plasticbag" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="400dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp"
                android:id="@+id/bottleImgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bottleimg"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/fish2imgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/fishimg2" />

            <ImageView
                android:layout_marginLeft="400dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp"
                android:id="@+id/seaHorseImgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/seahorse" />
        </LinearLayout>




    </LinearLayout>











</FrameLayout>