<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalWarmingGame"
    android:background="@drawable/bathroom">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="392dp"
        android:orientation="vertical"
        android:weightSum="5">


        <ImageView
            android:id="@+id/duckImgID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/runningTap"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/tap" />

            <ImageView
                android:id="@+id/runningShower"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:rotation="270"
                app:srcCompat="@drawable/shower" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/waterPollGSID"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_marginBottom="60dp"
                android:text="0/2"
                android:textColor="@color/colorBlack"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutGWGameTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"
                android:text="@string/water_cri_game_tut_str"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>