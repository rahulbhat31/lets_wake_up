<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalWarmingGame"
    android:background="@drawable/road">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">


        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/factory" />

            <ImageView
                android:id="@+id/plasticBagImgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="699dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/carsmoke"
                android:layout_width="269dp"
                android:layout_height="79dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/car_smoke" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/waterPollGSID"
                android:layout_width="90dp"
                android:layout_height="77dp"
                android:layout_marginBottom="60dp"
                android:text="0/2"
                android:textColor="@color/colorWhite"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutGWGameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="Find all items that are  causing global warming and earn points"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>