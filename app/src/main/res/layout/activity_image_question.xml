<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ImageQuestionActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:background="@color/colorFluorescentLight">

        <TextView
            android:id="@+id/nameImgPage"
            android:layout_width="277dp"
            android:layout_height="78dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Hi rahul"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@drawable/iconfinder_11_2694133"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imgeTxtQuestionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="How do u save our enviornment ?"
            android:textSize="25sp" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp">

            <LinearLayout
                android:id="@+id/bgLayout1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/whitebdg">

                <ImageButton
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"
                     />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bgLayout2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/whitebdg">

                <ImageButton
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bgLayout3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/whitebdg">

                <ImageButton
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"

                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bgLayout4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/whitebdg">

                <ImageButton
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.6"
        >

        <Button
            android:id="@+id/imgQuesSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorBrown"
            android:textColor="@color/colorWhite"
            android:text="Submit"/>

        <TextView
            android:id="@+id/rightImgAnsStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Got it right!!"
            android:textColor="@color/colorGreen"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/wrongImgAnsStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:visibility="gone"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/imgTutorialQuestionPage"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
            android:layout_marginTop="80dp"
            android:background="@color/colorFluorescent"
            android:text="Tilt your phone towards right or left for next question"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>